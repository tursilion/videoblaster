GPUVLP	
	MOV *R2+,*R0+
	MOV *R3+,*R1+
	MOV *R2+,*R0+
	MOV *R3+,*R1+
	MOV *R2+,*R0+
	MOV *R3+,*R1+
	MOV *R2+,*R0+
	MOV *R3+,*R1+
	DEC R4
	JNE GPUVLP
	JMP GPURUN		* go wait again

