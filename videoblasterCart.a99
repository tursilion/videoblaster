	LI R1,>4000		* second buffer target when >80
	LI R2,96		* we can move words instead of bytes
GPUBLP
	MOV *R0+,*R1+
	MOV *R0+,*R1+
	MOV *R0+,*R1+
	MOV *R0+,*R1+
	DEC R2
	JNE GPUBLP
	JMP GPURUN		* go wait again

GPUEND

